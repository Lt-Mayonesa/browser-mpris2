{
  "manifest_version": 2,

  "name": "browser-mpris2",
  "description": "Implements the MPRIS2 interface for Chrome and Firefox",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["media.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "nativeMessaging"
  ]
}
