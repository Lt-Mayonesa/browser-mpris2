{
  "manifest_version": 2,
  "name": "Browser MPRIS2 debug",
  "description": "Implements the MPRIS2 interface for Chrome and Firefox",
  "version": "0.5.0",
  "icons": {
    "16": "assets/browser-mpris2-16.png",
    "48": "assets/browser-mpris2-48.png",
    "128": "assets/browser-mpris2-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-mpris2@lt-mayonesa.github.io",
      "strict_min_version": "42.0"
    }
  },
  "browser_action": {
    "default_title": "Browser MPRIS2",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background/proxy.js",
      "background/updater.js",
      "background/commands.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "main/globals.js",
        "main/player.js",
        "main/carrier.js",
        "main/playback.js",
        "main/host.js",
        "main/page.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "providers/youtube.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://music.youtube.com/*"
      ],
      "js": [
        "providers/youtube-music.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://soundcloud.com/*"
      ],
      "js": [
        "providers/soundcloud.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://netflix.com/*",
        "*://*.netflix.com/*"
      ],
      "js": [
        "providers/netflix.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://open.spotify.com/*"
      ],
      "js": [
        "providers/spotify.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://listen.tidal.com/*"
      ],
      "js": [
        "providers/tidal.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "*://www.google.com/recaptcha/*",
        "*://google.com/recaptcha/*",
        "*://mail.goole.com/*"
      ],
      "js": [
        "init.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "nativeMessaging"
  ],
  "commands": {
    "Play": {
      "description": "Play Media"
    },
    "Pause": {
      "description": "Pause Media"
    },
    "PlayPause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space"
      },
      "description": "Play/Pause Media"
    },
    "Stop": {
      "description": "Stop Media"
    },
    "Next": {
      "description": "Next Media"
    },
    "Previous": {
      "description": "Previous Media"
    }
  }
}
